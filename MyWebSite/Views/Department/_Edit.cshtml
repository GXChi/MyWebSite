<div class="modal fade" id="edit_model" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="Update" class="form-element">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="modal-title text-center" id="myModalLabel">编辑部门</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="col-xs-4">
                                <label>名称</label>
                            </div>
                            <div class="col-xs-8">
                                <input type="text" id="name" name="name" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="col-xs-4">
                                <label>编码</label>
                            </div>
                            <div class="col-xs-8">
                                <input type="text" id="code" name="code" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="col-xs-4">
                                <label>负责人</label>
                            </div>
                            <div class="col-xs-8">
                                <input type="text" id="manager" name="manager" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="col-xs-4">
                                <label>联系电话</label>
                            </div>
                            <div class="col-xs-8">
                                <input type="text" id="contactNumber" name="contactNumber" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="id" id="guid"/>
                    <input type="hidden" name="createTime" class="form-control" value="@DateTime.Now" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="submit" class="btn btn-primary">新增</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
<style>
    .row {
        margin-top: 4px;
        margin-bottom: 4px;
    }
</style>